<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/md_theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="פסיפלונט מובייל"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- API ID -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API ID"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#66FFFFFF"
            app:hintTextColor="#CCFFFFFF"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etApiId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="#CCFFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- API HASH -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API HASH"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#66FFFFFF"
            app:hintTextColor="#CCFFFFFF"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etApiHash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="#CCFFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="מספר טלפון (כולל +972...)"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#66FFFFFF"
            app:hintTextColor="#CCFFFFFF"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@android:color/white"
                android:textColorHint="#CCFFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Target channel username -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ערוץ יעד (@username)"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#66FFFFFF"
            app:hintTextColor="#CCFFFFFF"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTargetUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="#CCFFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Watermark -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPickWatermark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="בחר סימן מים מהגלריה"
            android:layout_marginTop="14dp"
            app:cornerRadius="14dp" />

        <TextView
            android:id="@+id/tvWatermarkStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="לא נטען סימן מים"
            android:textColor="#CCFFFFFF"
            android:paddingTop="6dp"
            android:paddingBottom="10dp" />

        <!-- Send code -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שלח קוד אימות"
            app:cornerRadius="14dp" />

        <!-- Code box (hidden until send code) -->
        <LinearLayout
            android:id="@+id/boxCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="קוד אימות"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#66FFFFFF"
                app:hintTextColor="#CCFFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CCFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="סיסמת אימות דו-שלבי (אם יש)"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#66FFFFFF"
                app:hintTextColor="#CCFFFFFF"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CCFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Login -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="התחברות"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cornerRadius="14dp" />

    </LinearLayout>
</ScrollView>
